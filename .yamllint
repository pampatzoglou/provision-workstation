---
extends: default

rules:
  line-length:
    max: 150
    level: warning
  comments-indentation:
    level: warning
  braces:
    forbid: false
    min-spaces-inside: 0
    max-spaces-inside: 1
    min-spaces-inside-empty: -1
    max-spaces-inside-empty: -1

ignore: |
  .github
  */meta/main.yml
